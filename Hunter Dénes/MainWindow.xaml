<Window x:Class="Hunter_Dénes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:h="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        xmlns:local="clr-namespace:Hunter_Dénes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel>
            <ListBox x:Name="lbGyongyok"/>
        </StackPanel>
        
        <h:HelixViewport3D x:Name="ter" Grid.Column="1" ZoomExtentsWhenLoaded="True">
            <h:HelixViewport3D.Camera>
                <PerspectiveCamera x:Name="kamera" Position="20 20 20" LookDirection="-0.9 -0.9 -0.8" UpDirection="1, 1, 1"/>
            </h:HelixViewport3D.Camera>
            <h:SunLight/>
        </h:HelixViewport3D>
    </Grid>
</Window>
